{
  "dashboard": {
    "id": null,
    "title": "Docker Containers - Auto Video Generation",
    "tags": ["auto-video", "docker", "containers"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Container Status",
        "type": "stat",
        "targets": [
          {
            "expr": "count(container_last_seen{name=~\".*-service|frontend|postgres|redis|minio\"}) by (name)",
            "legendFormat": "{{name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Container CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{name=~\".*-service|frontend\"}[5m])) by (name) * 100",
            "legendFormat": "{{name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yAxes": [{"unit": "percent"}]
      },
      {
        "id": 3,
        "title": "Container Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\".*-service|frontend\"}/1024/1024",
            "legendFormat": "{{name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "yAxes": [{"unit": "MB"}]
      },
      {
        "id": 4,
        "title": "Container Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{name=~\".*-service|frontend\"}[5m])",
            "legendFormat": "{{name}} - RX"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{name=~\".*-service|frontend\"}[5m])",
            "legendFormat": "{{name}} - TX"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "yAxes": [{"unit": "Bps"}]
      },
      {
        "id": 5,
        "title": "Container Disk I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_fs_reads_bytes_total{name=~\".*-service|frontend\"}[5m])",
            "legendFormat": "{{name}} - Read"
          },
          {
            "expr": "rate(container_fs_writes_bytes_total{name=~\".*-service|frontend\"}[5m])",
            "legendFormat": "{{name}} - Write"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "yAxes": [{"unit": "Bps"}]
      },
      {
        "id": 6,
        "title": "Container Restart Count",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(container_start_time_seconds{name=~\".*-service|frontend\"}[1h])",
            "legendFormat": "{{name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 7,
        "title": "Container Log Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_log_lines_total{level=\"error\",name=~\".*-service|frontend\"}[5m])",
            "legendFormat": "{{name}} - Errors/s"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
    "time": {
      "from": "now-3h",
      "to": "now"
    },
    "refresh": "30s"
  }
}