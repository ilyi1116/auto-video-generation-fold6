{
  "dashboard": {
    "id": null,
    "title": "System Overview - Auto Video Generation",
    "tags": ["auto-video", "system", "overview"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\".*-service|frontend|postgres-exporter|redis-exporter\"}",
            "legendFormat": "{{instance}} - {{job}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "1", "text": "UP"},
              {"type": "value", "value": "0", "text": "DOWN"}
            ],
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "System CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "yAxes": [
          {"max": 100, "min": 0, "unit": "percent"}
        ]
      },
      {
        "id": 3,
        "title": "System Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory Usage %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yAxes": [
          {"max": 100, "min": 0, "unit": "percent"}
        ]
      },
      {
        "id": 4,
        "title": "Disk Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(1 - (node_filesystem_avail_bytes{fstype!=\"tmpfs\"} / node_filesystem_size_bytes{fstype!=\"tmpfs\"})) * 100",
            "legendFormat": "{{mountpoint}} - Disk Usage %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "yAxes": [
          {"max": 100, "min": 0, "unit": "percent"}
        ]
      },
      {
        "id": 5,
        "title": "Service Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\".*-service\"}[5m])) by (le, service))",
            "legendFormat": "{{service}} - 95th percentile"
          },
          {
            "expr": "histogram_quantile(0.5, sum(rate(http_request_duration_seconds_bucket{job=~\".*-service\"}[5m])) by (le, service))",
            "legendFormat": "{{service}} - 50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "yAxes": [
          {"unit": "s"}
        ]
      },
      {
        "id": 6,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\".*-service|api-gateway\"}[5m])) by (service)",
            "legendFormat": "{{service}} - Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "yAxes": [
          {"unit": "reqps"}
        ]
      },
      {
        "id": 7,
        "title": "HTTP Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"4..|5..\",job=~\".*-service|api-gateway\"}[5m])) by (service) / sum(rate(http_requests_total{job=~\".*-service|api-gateway\"}[5m])) by (service) * 100",
            "legendFormat": "{{service}} - Error Rate %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "yAxes": [
          {"max": 100, "min": 0, "unit": "percent"}
        ]
      },
      {
        "id": 8,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{job=\"postgres-exporter\"}",
            "legendFormat": "{{datname}} - Active Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "yAxes": [
          {"unit": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Redis Memory Usage",
        "type": "graph", 
        "targets": [
          {
            "expr": "redis_memory_used_bytes{job=\"redis-exporter\"}",
            "legendFormat": "Memory Used"
          },
          {
            "expr": "redis_config_maxmemory{job=\"redis-exporter\"}",
            "legendFormat": "Max Memory"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "yAxes": [
          {"unit": "bytes"}
        ]
      },
      {
        "id": 10,
        "title": "Container Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{name=~\".*-service|frontend\"}[5m])) by (name) * 100",
            "legendFormat": "{{name}} - CPU %"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 40},
        "yAxes": [
          {"unit": "percent"}
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}