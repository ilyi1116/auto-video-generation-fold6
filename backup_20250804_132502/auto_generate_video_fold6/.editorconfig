# EditorConfig 配置檔案
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{py,pyi}]
indent_size = 4
max_line_length = 100

[*.{js,ts,jsx,tsx,svelte}]
indent_size = 2
max_line_length = 100

[*.{yaml,yml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{sql,pgsql}]
indent_size = 4

[*.{html,css,scss}]
indent_size = 2

[*.{toml,ini}]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.{proto,protobuf}]
indent_size = 2

[docker-compose*.yml]
indent_size = 2

[{package.json,package-lock.json,tsconfig.json}]
indent_size = 2