# 開發環境配置
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug

# 資料庫配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-dev_password}
POSTGRES_DB=auto_video_generation_dev

DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD:-dev_password}@localhost:5432/auto_video_generation_dev
ASYNC_DATABASE_URL=postgresql+asyncpg://postgres:${POSTGRES_PASSWORD:-dev_password}@localhost:5432/auto_video_generation_dev

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# MinIO 配置
MINIO_HOST=localhost
MINIO_PORT=9000
S3_ACCESS_KEY_ID=${S3_ACCESS_KEY_ID:-minioadmin}
S3_SECRET_ACCESS_KEY=${S3_SECRET_ACCESS_KEY:-minioadmin123}
S3_ENDPOINT_URL=http://localhost:9000

# 服務端口
FRONTEND_PORT=3000
API_GATEWAY_PORT=8000
AUTH_SERVICE_PORT=8001
VIDEO_SERVICE_PORT=8004

# 開發用 API 密鑰 (假的，僅供測試)
OPENAI_API_KEY=${OPENAI_API_KEY:-sk-dev-test-key}
GOOGLE_AI_API_KEY=${GOOGLE_AI_API_KEY:-dev-google-key}
STABILITY_API_KEY=${STABILITY_API_KEY:-dev-stability-key}

# JWT 配置
JWT_SECRET_KEY=${JWT_SECRET_KEY:-dev-jwt-secret-key-not-for-production}
SECRET_KEY=${SECRET_KEY:-dev-app-secret-key-not-for-production}

# 開發模式設定
AUTO_RELOAD=true
SHOW_DOCS=true
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]