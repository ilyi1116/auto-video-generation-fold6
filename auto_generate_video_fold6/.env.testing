# 測試環境配置
NODE_ENV=testing
APP_DEBUG=false

# 服務埠號
FRONTEND_PORT=3001
API_GATEWAY_PORT=8001

# 測試資料庫
DATABASE_URL=postgresql://test:test_password@localhost:5432/auto_video_test
REDIS_URL=redis://localhost:6379/1

# 測試存儲
STORAGE_PROVIDER=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=auto-video-test

# JWT 設定（測試用）
JWT_SECRET=test_jwt_secret_key
JWT_EXPIRES_IN=1h

# 測試設定
TEST_TIMEOUT=30000
COVERAGE_THRESHOLD=80
MOCK_AI_SERVICES=true
MOCK_SOCIAL_APIS=true

# E2E 測試
E2E_BASE_URL=http://localhost:3001
E2E_API_URL=http://localhost:8001
PLAYWRIGHT_BROWSERS=chromium

# 日誌
LOG_LEVEL=warn
LOG_FORMAT=json

# 禁用外部服務
PROMETHEUS_ENABLED=false
SENTRY_DSN=
EMAIL_ENABLED=false