{
  "trend_service_url": "http://trend-service:8000",
  "video_service_url": "http://video-service:8000",
  "ai_service_url": "http://ai-service:8000",
  "output_dir": "./generated_videos",
  
  "video_generation": {
    "max_videos_per_run": 5,
    "video_duration": 30,
    "target_platforms": ["tiktok", "instagram_reels", "youtube_shorts"],
    "categories": ["technology", "entertainment", "lifestyle", "sports", "business"],
    "languages": ["zh-TW", "zh-CN"],
    "quality_threshold": 0.7
  },
  
  "scheduling": {
    "enabled": true,
    "interval_seconds": 1800,
    "auto_publish": false,
    "peak_hours": ["09:00", "12:00", "18:00", "21:00"]
  },
  
  "trends_collection": {
    "geo_locations": ["TW", "HK", "SG"],
    "trending_topics_limit": 20,
    "keyword_filters": {
      "min_length": 2,
      "max_length": 50,
      "exclude_nsfw": true,
      "exclude_patterns": ["covid", "death", "disaster"]
    }
  },
  
  "video_styles": {
    "tiktok": {
      "aspect_ratio": "9:16",
      "duration_range": [15, 60],
      "effects": ["zoom_in", "text_overlay", "trending_hashtag", "emoji_burst"],
      "fonts": ["Arial Bold", "Impact"],
      "color_scheme": "vibrant"
    },
    "instagram_reels": {
      "aspect_ratio": "9:16", 
      "duration_range": [15, 90],
      "effects": ["smooth_transition", "text_overlay", "hashtag_animation"],
      "fonts": ["Helvetica", "Roboto"],
      "color_scheme": "modern"
    },
    "youtube_shorts": {
      "aspect_ratio": "9:16",
      "duration_range": [15, 60],
      "effects": ["thumbnail_highlight", "subscribe_reminder", "info_cards"],
      "fonts": ["YouTube Sans", "Roboto"],
      "color_scheme": "youtube_brand"
    }
  },
  
  "content_templates": {
    "technology": {
      "intro_templates": [
        "🔥 {keyword} 正在科技界掀起革命！",
        "💡 {keyword} - 你不能錯過的科技趨勢！",
        "🚀 {keyword} 將如何改變我們的未來？"
      ],
      "outro_templates": [
        "想了解更多科技趨勢？關注我們！",
        "科技改變生活，讓我們一起探索！",
        "下次再為你帶來更多科技資訊！"
      ]
    },
    "entertainment": {
      "intro_templates": [
        "✨ {keyword} 成為最新娛樂話題！",
        "🎬 {keyword} - 娛樂圈的新寵兒！",
        "🌟 為什麼 {keyword} 這麼火紅？"
      ],
      "outro_templates": [
        "更多娛樂資訊，記得關注！",
        "娛樂生活，精彩不斷！",
        "下個熱門話題見！"
      ]
    },
    "lifestyle": {
      "intro_templates": [
        "🌈 {keyword} 正在改變生活方式！",
        "💫 {keyword} - 生活新風尚！",
        "🎯 如何用 {keyword} 提升生活品質？"
      ],
      "outro_templates": [
        "生活美學，從關注開始！",
        "更多生活靈感，持續更新！",
        "讓生活更美好，一起努力！"
      ]
    }
  },
  
  "ai_settings": {
    "script_generation": {
      "model": "gpt-3.5-turbo",
      "max_tokens": 500,
      "temperature": 0.8,
      "language_style": "conversational",
      "target_audience": "young_adults"
    },
    "image_generation": {
      "model": "dall-e-3",
      "style": "vivid",
      "quality": "hd",
      "size": "1024x1792"
    },
    "voice_synthesis": {
      "voice_id": "zh-TW-YunJheNeural",
      "speaking_rate": "1.1",
      "pitch": "+2Hz",
      "emotion": "excited"
    }
  },
  
  "output_settings": {
    "video_quality": "1080p",
    "bitrate": "8000k",
    "frame_rate": 30,
    "audio_bitrate": "192k",
    "format": "mp4",
    "compression": "h264"
  },
  
  "social_media_integration": {
    "auto_publish": false,
    "platforms": {
      "tiktok": {
        "enabled": false,
        "hashtags_limit": 5,
        "description_template": "{script}\n\n{hashtags}"
      },
      "instagram": {
        "enabled": false,
        "hashtags_limit": 30,
        "story_enabled": true
      },
      "youtube": {
        "enabled": false,
        "title_template": "{keyword} - 最新趨勢解析",
        "description_template": "探索 {keyword} 的精彩世界！\n\n{script}\n\n#Shorts {hashtags}"
      }
    }
  },
  
  "monitoring": {
    "enabled": true,
    "metrics": ["generation_success_rate", "processing_time", "video_quality_score"],
    "alerts": {
      "low_success_rate": 0.5,
      "high_processing_time": 300
    }
  },
  
  "storage": {
    "local_storage": "./generated_videos",
    "cloud_storage": {
      "enabled": false,
      "provider": "s3",
      "bucket": "auto-video-generation",
      "region": "ap-northeast-1"
    },
    "cleanup": {
      "enabled": true,
      "retention_days": 30,
      "max_storage_gb": 100
    }
  }
}