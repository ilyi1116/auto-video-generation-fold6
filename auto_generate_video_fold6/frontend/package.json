{
  "name": "auto-video-frontend",
  "version": "1.0.0",
  "description": "Auto Video Generation System Frontend",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run --reporter=default --coverage",
    "test:component": "vitest run src/lib/components",
    "test:integration": "vitest run src/tests/integration",
    "test:coverage": "vitest --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:ci": "npm run test:unit -- --reporter=verbose --coverage --run && npm run test:e2e -- --reporter=github",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "lint:fix": "prettier --plugin-search-dir . --write . && eslint . --fix",
    "format": "prettier --plugin-search-dir . --write .",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "quality:check": "npm run lint && npm run check && npm run test:coverage",
    "quality:fix": "npm run lint:fix && npm run format",
    "pre-commit": "npm run quality:check",
    "build:analyze": "vite build --mode analyze",
    "preview:e2e": "npm run build && npm run preview & playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.27.4",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/svelte": "^4.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "esbuild": "0.17.19",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.30.0",
    "jsdom": "^23.0.0",
    "msw": "^2.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.4.2",
    "vitest": "^1.0.0",
    "web-vitals": "^5.0.3"
  },
  "dependencies": {
    "@auth/sveltekit": "^1.0.0",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.0",
    "lucide-svelte": "^0.292.0",
    "postcss": "^8.4.31",
    "svelte-french-toast": "^1.2.0",
    "tailwindcss": "^3.3.5",
    "zod": "^3.22.4"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  }
}
