# ===========================================
# Auto Video Generation System Environment
# ===========================================

# ----- Database Configuration -----
POSTGRES_USER=auto_video_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=auto_video_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ----- Redis Configuration -----
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# ----- Celery Configuration -----
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/1
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# ----- Security & JWT -----
JWT_SECRET_KEY=your_super_secret_jwt_key_here_minimum_32_characters_long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ----- API Configuration -----
API_V1_STR=/api/v1
PROJECT_NAME="Auto Video Generation System"
DEBUG=true
API_GATEWAY_PORT=8000
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8000"]

# ----- Service Ports -----
AUTH_SERVICE_PORT=8001
DATA_SERVICE_PORT=8002
INFERENCE_SERVICE_PORT=8003
VIDEO_SERVICE_PORT=8004
AI_SERVICE_PORT=8005
SOCIAL_SERVICE_PORT=8006
TREND_SERVICE_PORT=8007
SCHEDULER_SERVICE_PORT=8008

# ----- Object Storage (S3 Compatible) -----
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=auto-video-storage
S3_REGION=us-east-1

# ----- AI Services API Keys -----
# Suno.ai Pro for Voice Synthesis
SUNO_API_KEY=your_suno_ai_pro_api_key_here
SUNO_API_URL=https://api.suno.ai/v1

# Google Gemini Pro for Script Generation
GOOGLE_GEMINI_API_KEY=your_google_gemini_pro_api_key_here
GOOGLE_AI_STUDIO_API_KEY=your_google_ai_studio_key_here

# Stable Diffusion for Image Generation
HUGGING_FACE_TOKEN=your_hugging_face_token_here
STABILITY_API_KEY=your_stability_ai_api_key_here

# Alternative AI Services (Optional)
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ----- Social Media Platform APIs -----
# TikTok API Configuration
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here
TIKTOK_REDIRECT_URI=http://localhost:8000/auth/tiktok/callback

# YouTube API (Optional)
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# Instagram API (Optional)
INSTAGRAM_CLIENT_ID=your_instagram_client_id_here
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret_here

# ----- Google OAuth Configuration -----
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ----- Email Service Configuration -----
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@autovideo.com
EMAIL_FROM_NAME=Auto Video System

# ----- Content Analysis Services -----
# For trending keyword analysis
APIFY_API_TOKEN=your_apify_api_token_here
SERPAPI_API_KEY=your_serpapi_key_here

# ----- Video Processing Configuration -----
MAX_VIDEO_DURATION_SECONDS=180
MAX_VIDEO_FILE_SIZE_MB=500
DEFAULT_VIDEO_RESOLUTION=1080p
DEFAULT_ASPECT_RATIO=9:16
SUPPORTED_VIDEO_FORMATS=["mp4", "mov", "avi"]

# Audio processing settings
MAX_AUDIO_DURATION_SECONDS=180
AUDIO_SAMPLE_RATE=44100
AUDIO_BITRATE=192k
ALLOWED_AUDIO_FORMATS=["wav", "mp3", "flac", "m4a"]

# Image processing settings
MAX_IMAGE_SIZE_MB=50
DEFAULT_IMAGE_WIDTH=1080
DEFAULT_IMAGE_HEIGHT=1920
SUPPORTED_IMAGE_FORMATS=["jpg", "jpeg", "png", "webp"]

# ----- Rate Limiting -----
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=20

# ----- File Upload Limits -----
MAX_UPLOAD_SIZE_MB=100
UPLOAD_TIMEOUT_SECONDS=300

# ----- Logging -----
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# ----- Background Job Configuration -----
# Trending analysis schedule
TRENDING_ANALYSIS_CRON=0 */6 * * *  # Every 6 hours
KEYWORD_REFRESH_CRON=0 2 * * *      # Daily at 2 AM
CLEANUP_OLD_FILES_CRON=0 3 * * *    # Daily at 3 AM

# ----- Feature Flags -----
ENABLE_USER_CREDITS=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AUTO_PUBLISH=true
ENABLE_TRENDING_ANALYSIS=true

# ----- Development Tools -----
ENABLE_API_DOCS=true
ENABLE_ADMIN_PANEL=true
ENABLE_DEBUG_TOOLBAR=false

# ----- Cache Configuration -----
CACHE_TTL_SECONDS=3600
CACHE_MAX_ENTRIES=10000

# ----- Environment Settings -----
ENVIRONMENT=development
FRONTEND_URL=http://localhost:5173
API_BASE_URL=http://localhost:8000