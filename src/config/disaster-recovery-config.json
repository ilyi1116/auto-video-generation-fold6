{
  "monitoring_interval": 30,
  "services": {
    "api-gateway": {
      "type": "http",
      "port": 8080,
      "health_url": "http://localhost:8080/health",
      "timeout": 5,
      "failover": {
        "enabled": true,
        "backup_service": "api-gateway-backup",
        "validation_url": "http://localhost:8081/health",
        "validation_delay": 10,
        "stop_primary": true,
        "update_service_discovery": true
      }
    },
    "ai-service": {
      "type": "http", 
      "port": 8001,
      "health_url": "http://localhost:8001/health",
      "timeout": 10,
      "failover": {
        "enabled": true,
        "backup_service": "ai-service-backup",
        "validation_url": "http://localhost:8002/health"
      }
    },
    "video-service": {
      "type": "http",
      "port": 8003,
      "health_url": "http://localhost:8003/health",
      "timeout": 5,
      "failover": {
        "enabled": true,
        "backup_service": "video-service-backup"
      }
    },
    "postgresql": {
      "type": "postgresql",
      "host": "localhost",
      "port": 5432,
      "username": "postgres",
      "password": "${POSTGRES_PASSWORD}",
      "database": "auto_video",
      "timeout": 5,
      "failover": {
        "enabled": true,
        "backup_host": "postgresql-replica",
        "promotion_script": "/scripts/promote_replica.sh",
        "replication_check": true
      }
    },
    "redis": {
      "type": "redis",
      "host": "localhost",
      "port": 6379,
      "password": "${REDIS_PASSWORD}",
      "timeout": 5,
      "failover": {
        "enabled": true,
        "backup_host": "redis-replica",
        "sentinel_enabled": true,
        "sentinel_hosts": ["sentinel1:26379", "sentinel2:26379", "sentinel3:26379"]
      }
    }
  },
  "recovery_plans": {
    "database_recovery": {
      "target_rpo_minutes": 15,
      "target_rto_minutes": 60,
      "priority": 1,
      "notification_required": true
    },
    "application_recovery": {
      "target_rpo_minutes": 5,
      "target_rto_minutes": 15,
      "priority": 2,
      "depends_on": ["database_recovery"]
    },
    "full_system_recovery": {
      "target_rpo_minutes": 30,
      "target_rto_minutes": 120,
      "priority": 1,
      "includes": ["database_recovery", "application_recovery"]
    }
  },
  "notification": {
    "email": {
      "enabled": true,
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "username": "${DR_EMAIL_USER}",
      "password": "${DR_EMAIL_PASS}",
      "recipients": ["admin@example.com", "ops@example.com"],
      "escalation": {
        "enabled": true,
        "delay_minutes": 15,
        "escalation_recipients": ["cto@example.com"]
      }
    },
    "slack": {
      "enabled": false,
      "webhook_url": "${SLACK_DR_WEBHOOK}",
      "channel": "#ops-alerts",
      "mention_users": ["@admin", "@ops-team"]
    },
    "sms": {
      "enabled": false,
      "provider": "twilio",
      "account_sid": "${TWILIO_ACCOUNT_SID}",
      "auth_token": "${TWILIO_AUTH_TOKEN}",
      "from_number": "${TWILIO_FROM_NUMBER}",
      "recipients": ["+1234567890"]
    }
  },
  "backup_integration": {
    "enabled": true,
    "backup_service_url": "http://localhost:8080/backup",
    "verify_backup_before_recovery": true,
    "backup_retention_check": true
  },
  "compliance": {
    "audit_logging": true,
    "log_retention_days": 365,
    "encryption_required": true,
    "approve_before_recovery": false,
    "required_approvers": ["admin", "ops-manager"]
  },
  "testing": {
    "automated_dr_tests": {
      "enabled": true,
      "schedule": "0 2 * * 1",
      "test_environment": "staging"
    },
    "manual_dr_tests": {
      "frequency": "quarterly",
      "documentation_required": true
    }
  }
}