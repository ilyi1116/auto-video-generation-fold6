{
  "mode": "enterprise",
  "description": "企業級模式 - 高產量高品質配置",
  "extends": "base-config.json",
  
  "generation": {
    "daily_video_limit": 50,
    "batch_size": 5,
    "max_concurrent_jobs": 8,
    "quality_preset": "high",
    "duration_range": [30, 60],
    "platforms": ["tiktok", "instagram_reels", "youtube_shorts", "facebook_reels"]
  },
  
  "scheduling": {
    "enabled": true,
    "mode": "auto_schedule",
    "cron_expression": "0 */2 * * *",
    "work_hours": {
      "start": "00:00",
      "end": "23:59",
      "timezone": "Asia/Taipei"
    },
    "auto_stop_after_daily_limit": true
  },
  
  "resources": {
    "max_memory_usage": "32GB",
    "max_cpu_cores": 16,
    "temp_storage_limit": "100GB",
    "parallel_video_processing": 4
  },
  
  "cost_control": {
    "daily_budget_usd": 200,
    "api_rate_limits": {
      "openai_requests_per_hour": 200,
      "stability_ai_requests_per_hour": 100,
      "elevenlabs_requests_per_hour": 150
    },
    "stop_on_budget_exceeded": false,
    "cost_tracking_enabled": true
  },
  
  "content": {
    "trending_sources": ["google_trends", "twitter_api", "youtube_api", "tiktok_api"],
    "content_categories": ["all"],
    "language": "zh-TW",
    "voice_synthesis": {
      "provider": "elevenlabs",
      "voice_id": "premium",
      "speed": 1.1
    }
  },
  
  "ai_services": {
    "text_generation": {
      "provider": "openai",
      "model": "gpt-4",
      "max_tokens": 500
    },
    "image_generation": {
      "provider": "stability_ai",
      "model": "stable-diffusion-xl",
      "quality": "premium"
    }
  },
  
  "storage": {
    "local_storage_enabled": true,
    "cloud_backup": true,
    "retention_days": 30,
    "auto_cleanup": false
  },
  
  "monitoring": {
    "basic_logging": true,
    "performance_metrics": true,
    "detailed_analytics": true,
    "notification_channels": ["console", "email", "slack"],
    "prometheus_enabled": true,
    "grafana_enabled": true
  },
  
  "social_publishing": {
    "auto_publish": true,
    "save_to_draft": false,
    "platforms_config": {
      "tiktok": {
        "hashtags_limit": 10,
        "privacy": "public"
      },
      "instagram": {
        "hashtags_limit": 30,
        "privacy": "public"
      },
      "youtube": {
        "hashtags_limit": 15,
        "privacy": "public"
      }
    }
  },
  
  "deployment": {
    "mode": "kubernetes",
    "services_required": [
      "api-gateway",
      "auth-service",
      "data-service", 
      "trend-service",
      "ai-service",
      "video-service",
      "social-service",
      "scheduler-service",
      "inference-service"
    ],
    "database_mode": "postgresql",
    "cache_mode": "redis_cluster"
  }
}