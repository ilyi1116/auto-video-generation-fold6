# =============================================================================
# Auto Video 商業化就緒環境配置
# =============================================================================
# 快速商業化部署 - 可立即上線的配置

# =============================================================================
# 基本應用配置
# =============================================================================
DEBUG=false
PROJECT_NAME=Auto Video AI - Production
LOG_LEVEL=INFO
ENVIRONMENT=production

# =============================================================================
# 數據庫配置 - SQLite (快速部署)
# =============================================================================
DATABASE_URL=sqlite:///./data/autovideo_production.db
POSTGRES_USER=autovideo_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=autovideo_production

# =============================================================================
# Redis 配置
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# =============================================================================
# JWT 安全配置
# =============================================================================
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Stripe 付費配置 (正式商用)
# =============================================================================
# 測試環境
STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdef...
STRIPE_SECRET_KEY=sk_test_51234567890abcdef...
STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdef...

# 正式環境 (取消註解並填入真實值)
# STRIPE_PUBLISHABLE_KEY=pk_live_51234567890abcdef...
# STRIPE_SECRET_KEY=sk_live_51234567890abcdef...
# STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdef...

# =============================================================================
# AI 服務 API 密鑰 (必填 - 商業化必需)
# =============================================================================
# OpenAI API - 文本生成
OPENAI_API_KEY=sk-your-real-openai-api-key-here

# Google Gemini API - 備用文本生成
GOOGLE_API_KEY=your-real-google-api-key-here

# Stability AI - 圖像生成  
STABILITY_API_KEY=sk-your-real-stability-api-key-here

# ElevenLabs - 語音合成
ELEVENLABS_API_KEY=your-real-elevenlabs-api-key-here

# Suno AI - 音樂生成 (可選)
SUNO_API_KEY=your-real-suno-api-key-here

# =============================================================================
# 社交媒體平台 API (可選 - 但推薦設置)
# =============================================================================
# TikTok Business API
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# YouTube Data API
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_API_KEY=your_youtube_api_key

# Instagram Basic Display API
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# =============================================================================
# 檔案存儲配置
# =============================================================================
# 本地存儲 (快速部署)
STORAGE_TYPE=local
UPLOAD_PATH=./uploads
MAX_UPLOAD_SIZE_MB=100

# S3 存儲 (推薦生產環境)
# STORAGE_TYPE=s3
# S3_ACCESS_KEY_ID=your_s3_access_key
# S3_SECRET_ACCESS_KEY=your_s3_secret_key
# S3_BUCKET_NAME=autovideo-production
# S3_REGION=us-east-1
# S3_ENDPOINT_URL=https://s3.amazonaws.com

# =============================================================================
# 郵件服務配置 (用戶通知)
# =============================================================================
# SendGrid (推薦)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
FROM_EMAIL=noreply@yourdomain.com

# 或者使用 SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=true

# =============================================================================
# 監控與分析
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry 錯誤追蹤
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# 域名與 CORS 配置
# =============================================================================
FRONTEND_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]
ALLOWED_HOSTS=["yourdomain.com", "www.yourdomain.com", "api.yourdomain.com"]

# =============================================================================
# 速率限制與安全
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
MAX_CONCURRENT_GENERATIONS=5

# =============================================================================
# 商業化設定
# =============================================================================
# 訂閱方案配置
ENABLE_SUBSCRIPTIONS=true
FREE_TIER_VIDEO_LIMIT=3
STANDARD_TIER_PRICE=29
PROFESSIONAL_TIER_PRICE=99
ENTERPRISE_TIER_PRICE=299

# 使用量追蹤
ENABLE_USAGE_TRACKING=true
ENABLE_COST_TRACKING=true

# =============================================================================
# 部署相關配置
# =============================================================================
# SSL 配置
SSL_ENABLED=true
FORCE_HTTPS=true

# 效能優化
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# =============================================================================
# 開發與測試配置 (生產環境設為 false)
# =============================================================================
ENABLE_DOCS=false
ENABLE_ADMIN_PANEL=false
MOCK_AI_SERVICES=false

# =============================================================================
# 備份與災難恢復
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # 每天凌晨2點備份
BACKUP_RETENTION_DAYS=30

# =============================================================================
# 商業智能
# =============================================================================
ENABLE_ANALYTICS=true
ANALYTICS_PROVIDER=google
CONVERSION_TRACKING=true

# =============================================================================
# 客戶支援
# =============================================================================
SUPPORT_EMAIL=support@yourdomain.com
ENABLE_LIVE_CHAT=true
INTERCOM_APP_ID=your_intercom_app_id

# =============================================================================
# 實驗功能開關
# =============================================================================
FEATURE_BATCH_GENERATION=true
FEATURE_CUSTOM_VOICES=true
FEATURE_ADVANCED_EDITING=false
FEATURE_API_ACCESS=true

# =============================================================================
# 重要提醒
# =============================================================================
# 1. 請將所有 "your_*" 替換為真實的 API 密鑰
# 2. 設置真實的域名和 SSL 證書
# 3. 配置正式的 Stripe 帳號
# 4. 設定監控和日誌系統
# 5. 測試所有付費流程
# 6. 準備客戶支援流程