# 開發環境配置
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug

# 本地開發用的簡單設定
DATABASE_URL=postgresql://postgres:password@localhost:5432/autovideo_dev
REDIS_URL=redis://localhost:6379/0

# 本地檔案儲存
UPLOAD_DIR=./uploads/dev
S3_ENDPOINT=http://localhost:9000

# API 設定
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# CORS 設定 (開發環境寬鬆設定)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_CREDENTIALS=true

# 監控關閉（開發環境）
PROMETHEUS_ENABLED=false
JAEGER_ENABLED=false

# AI 服務 API 金鑰 (開發環境 - 使用測試金鑰)
GEMINI_API_KEY=test-gemini-key-for-development
SUNO_API_KEY=test-suno-key-for-development
STABLE_DIFFUSION_API_KEY=test-sd-key-for-development

# AI 服務配置
GEMINI_MODEL=gemini-pro
STABLE_DIFFUSION_API_URL=https://api.stability.ai/v1
SUNO_API_URL=https://api.sunoai.com

# JWT 配置
JWT_SECRET_KEY=development-jwt-secret-key-not-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
