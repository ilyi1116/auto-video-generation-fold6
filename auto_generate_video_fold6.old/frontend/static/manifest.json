  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+autovideo",
      "url": "/import?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "video/*": [".mp4", ".mov", ".avi", ".mkv"],
        "audio/*": [".mp3", ".wav", ".m4a", ".aac"],
        "text/plain": [".txt", ".srt"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["video/*", "audio/*", "image/*"]
        }
      ]
    }
  }
}