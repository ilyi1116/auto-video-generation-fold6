# Auto Video System - Development Environment Configuration
# 開發環境配置檔案

# =================================
# 環境設定
# =================================
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug

# =================================
# 應用程式設定
# =================================
APP_NAME="Auto Video System"
APP_VERSION="1.0.0"
APP_URL=http://localhost:3000
API_URL=http://localhost:8000
WS_URL=ws://localhost:8000

# =================================
# 認證設定
# =================================
JWT_SECRET=${JWT_SECRET:-dev-jwt-secret-change-in-production}
JWT_ALGORITHM=RS256
JWT_EXPIRATION=86400
AUTH_COOKIE_NAME=autovideo_session
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_HTTP_ONLY=true

# =================================
# 資料庫設定
# =================================
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD:-dev_password}@localhost:5432/autovideo_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-dev_password}
POSTGRES_DB=autovideo_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =================================
# Redis 設定
# =================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD:-dev_redis_password}
REDIS_DB=0

# =================================
# 檔案儲存設定
# =================================
S3_BUCKET=autovideo-dev
S3_REGION=us-east-1
S3_ENDPOINT=http://localhost:9000
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID:-dev_access_key}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY:-dev_secret_key}
MINIO_ROOT_USER=${MINIO_ROOT_USER:-dev_access_key}
MINIO_ROOT_PASSWORD=${MINIO_ROOT_PASSWORD:-dev_secret_key}

# =================================
# AI 服務 API 金鑰 (測試用)
# =================================
GEMINI_API_KEY=${GEMINI_API_KEY:-your_gemini_dev_api_key}
OPENAI_API_KEY=${OPENAI_API_KEY:-your_openai_dev_api_key}
SUNO_API_KEY=${SUNO_API_KEY:-your_suno_dev_api_key}
STABLE_DIFFUSION_API_KEY=${STABLE_DIFFUSION_API_KEY:-your_sd_dev_api_key}

# =================================
# 社群媒體 API (開發/測試)
# =================================
TIKTOK_CLIENT_ID=${TIKTOK_CLIENT_ID:-your_tiktok_dev_client_id}
TIKTOK_CLIENT_SECRET=${TIKTOK_CLIENT_SECRET:-your_tiktok_dev_client_secret}
YOUTUBE_CLIENT_ID=${YOUTUBE_CLIENT_ID:-your_youtube_dev_client_id}
YOUTUBE_CLIENT_SECRET=${YOUTUBE_CLIENT_SECRET:-your_youtube_dev_client_secret}
INSTAGRAM_CLIENT_ID=${INSTAGRAM_CLIENT_ID:-your_instagram_dev_client_id}
INSTAGRAM_CLIENT_SECRET=${INSTAGRAM_CLIENT_SECRET:-your_instagram_dev_client_secret}

# =================================
# 郵件設定 (開發用 - 使用 MailHog)
# =================================
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@autovideo.local
MAIL_FROM_NAME="Auto Video System"

# =================================
# Celery 設定
# =================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# =================================
# 監控設定
# =================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
ALERTMANAGER_PORT=9093

# =================================
# 開發工具設定
# =================================
HOT_RELOAD=true
AUTO_RELOAD=true
WATCH_FILES=true
ENABLE_PROFILER=true

# =================================
# CORS 設定 (開發用 - 較寬鬆)
# =================================
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.autovideo.com
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# =================================
# 安全設定 (開發用)
# =================================
SECURE_COOKIES=false
SESSION_SECURE=false
CSRF_PROTECTION=false
RATE_LIMIT_ENABLED=false

# =================================
# 日誌設定
# =================================
LOG_FORMAT=detailed
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/app.log
ENABLE_REQUEST_LOGGING=true
ENABLE_SQL_LOGGING=true

# =================================
# 測試設定
# =================================
TEST_DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD:-dev_password}@localhost:5432/autovideo_test
ENABLE_TEST_ROUTES=true
MOCK_EXTERNAL_APIS=true

# =================================
# 效能設定
# =================================
ENABLE_CACHING=true
CACHE_TTL=300
ENABLE_COMPRESSION=true
MAX_REQUEST_SIZE=100MB

# =================================
# 開發模式特殊設定
# =================================
SKIP_AUTH_FOR_DEVELOPMENT=false
ENABLE_API_DOCS=true
ENABLE_ADMIN_PANEL=true
DISABLE_EMAIL_VERIFICATION=true